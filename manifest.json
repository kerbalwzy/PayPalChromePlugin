{
	"name": "SinriuPayPal",
	"description": "熙润PayPal支付插件(Author:kerbalwzy)",
	"version": "1.0",
	"homepage_url": "https://github.com/kerbalwzy",
	"manifest_version": 2,
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		// "default_popup": "popup.html",  // 暂不显示popup
		"default_title": "熙锐PayPal支付插件",
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": [
			"js/jquery-3.3.1.min.js",
			"js/background.js"
		]
	},
	"content_scripts": [{
		"matches": [
			"<all_urls>" // 全地址匹配
			// "https://www.paypal.com/myaccount/transfer/*"
		],
		"js": [
			"js/jquery-3.3.1.min.js",
			"js/html2canvas.min.js",
			"js/content-script.js"
		],
		// "css": ["css/sinriu_plugin.css"],
		"run_at": "document_end"
	}],
	"permissions": [
		// "contextMenus",  // 右键权限
		"tabs",
		"notifications",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"https://www.paypal.com/*",
		"http://www.paypal.com/*",
		"declarativeContent"
	],

	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
